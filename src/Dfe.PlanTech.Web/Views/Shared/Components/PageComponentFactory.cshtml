@using Dfe.PlanTech.Domain.Content.Models;
@model Dfe.PlanTech.Domain.Content.Models.ContentComponent;
@using Dfe.PlanTech.Domain.Questionnaire.Models;

@{switch(Model){
    case Header header: {
        await Html.RenderPartialAsync("Components/Header", header);
        break;
    }
    
    case TextBody textBody: {
        <rich-text content=@textBody.RichText></rich-text>
        break;
    }
    
    case Category category: {
        await Html.RenderPartialAsync("Questionnaire/Category", category);
        break;
    }

    default:{
        <p>No content type found for @Model.GetType()</p>
        break;
    }
}}