@using Dfe.PlanTech.Domain.Content.Models;
@using Dfe.PlanTech.Domain.Questionnaire.Models;

@model Dfe.PlanTech.Domain.Content.Models.Buttons.ButtonWithEntryReference;

@{
    switch(Model.LinkToEntry){
        case Page pageContent:{
            <govuk-button-link href=@pageContent.Slug is-start-button=@Model.Button.IsStartButton>@Model.Button.Value</govuk-button-link>
            break;
        }
        case Question question: {
            <govuk-button-link asp-controller="Questions" asp-action="GetQuestionById" asp-route-id=@question.Sys.Id class="govuk-link">@Model.Button.Value</govuk-button-link>
            break;
        }
    }
}
