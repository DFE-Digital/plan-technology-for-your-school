    ViewData["ParentContainerClass"] = "recommendation-piece-container";
    ViewData["HeaderClass"] = "recommendation-piece-header";
    ViewData["ContentClass"] = "recommendation-piece-content";
    ViewData["HideHeader"] = true;
}

